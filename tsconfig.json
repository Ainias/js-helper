{
  "version": "2.0.2",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es6",
    "alwaysStrict": true,
    "lib": ["es5", "es2015.promise", "dom", "es2015", "es6"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "module": "commonjs",
    "allowJs": true
  },
  "include": [
    "./src/client.ts",
    "./src/server.ts",
    "./src/shared.ts"
  ],
  "exclude": []

}